<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--定义几何图形的四个角的弧度-->
    <corners
        android:radius="12dp"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        />

    <!--定义渐变色填充颜色-->
    <gradient
        android:angle="12"
        android:centerX="12"
        android:centerY="12"
        android:centerColor="@color/voiceColor"
        android:endColor="@color/blackColor"
        android:gradientRadius="12dp"
        android:startColor="@color/voiceColor"
        android:type="linear"
        android:useLevel="false"/>


    <!--定义几何图形的边距-->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/>

    <!--定义几何图形的大小-->
    <size
        android:width="50dp"
        android:color="@color/voiceColor"/>




</shape>